@page
@model GuildsModel
@{

}
<div class="container">
    <img height="100" src="/img/htb.png" />
    <h1><b>HTB Updates</b></h1>
    <hr>
    <p>Showing @Model.DiscordGuilds.Count registered guilds</p>
    <div class="table-responsive text-start">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Guild Id</th>
                    <th>Channel Id</th>
                    <th>Optional Announcements</th>
                    <th>Linked Users</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guild in Model.DiscordGuilds)
                {
                <tr>
                    <th>@guild.DiscordGuild.Id</th>
                    <td>@guild.DiscordGuild.GuildId</td>
                    <td>@guild.DiscordGuild.ChannelId</td>
                    <td>@(guild.DiscordGuild.OptionalAnnouncements ? "Enabled" : "Disabled")</td>
                    <td>@guild.LinkedUsersCount</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>